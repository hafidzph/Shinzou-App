<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="343dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/outline_purple">
            
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvKeberangkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/NEUTRAL05"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JKT"
                android:textColor="@color/NEUTRAL05"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="2dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvKeberangkatan"
                app:layout_constraintStart_toStartOf="parent"/>
            
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEstimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4h 0m"
                android:textSize="12sp"
                android:textColor="@color/NEUTRAL03"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvKeberangkatan"/>

            <View
                android:id="@+id/outlinedHorizontal"
                android:layout_width="69dp"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL03"
                android:layout_marginTop="4dp"
                android:layout_marginStart="17dp"
                app:layout_constraintTop_toBottomOf="@id/tvEstimasi"
                app:layout_constraintStart_toEndOf="@id/tvKeberangkatan"/>
            
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icRight"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_right"
                android:backgroundTint="@color/NEUTRAL03"
                android:layout_marginStart="-5dp"
                app:layout_constraintTop_toBottomOf="@id/tvEstimasi"
                app:layout_constraintStart_toEndOf="@id/outlinedHorizontal"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direct"
                android:textSize="12sp"
                android:textColor="@color/NEUTRAL03"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="4dp"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toBottomOf="@id/outlinedHorizontal"
                app:layout_constraintStart_toEndOf="@id/tvKeberangkatan"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTiba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/NEUTRAL05"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/icRight"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvInitialDua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MLB"
                android:textColor="@color/NEUTRAL05"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="2dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvTiba"
                app:layout_constraintStart_toEndOf="@id/icRight"/>
            
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 4.950.000"
                android:textColor="@color/DARKBLUE05"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="27dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvTiba"/>

            <View
                android:id="@+id/outlinedHorizontalDua"
                android:layout_width="328dp"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL03"
                android:layout_marginTop="16dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                app:layout_constraintTop_toBottomOf="@id/tvDirect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivBunga"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bunga"
                android:layout_marginTop="19dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/outlinedHorizontalDua"
                app:layout_constraintStart_toStartOf="parent"/>
            
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvJenisPesawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jet Air - Economy"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/NEUTRAL05"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/outlinedHorizontalDua"
                app:layout_constraintStart_toEndOf="@id/ivBunga"/>
            
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivBaggage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baggage"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvJenisPesawat"
                app:layout_constraintStart_toEndOf="@id/ivBunga"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_detail"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/outlinedHorizontalDua"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>